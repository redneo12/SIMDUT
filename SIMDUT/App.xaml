                        <BoxView Color="Black" WidthRequest ="10000" HeightRequest="2"/>
                    </StackLayout>
                    <StackLayout HorizontalOptions="Start" VerticalOptions="StartAndExpand" Margin="2.5">
                        <ContentPresenter/>
                    </StackLayout>
                    --><!--Footer section - no longer used-->
                    <!--<StackLayout VerticalOptions="End" HorizontalOptions="Center">
                            <Label Text="{TemplateBinding Parent.FooterText, StringFormat='-{0}-'}"/>
                        </StackLayout>--><!--
                </StackLayout>
                --><!--</ScrollVikew>--><!--
            </ControlTemplate>-->
        </ResourceDictionary>
    </Application.Resources>
</Application>
    